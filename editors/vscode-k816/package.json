{
  "name": "vscode-k816",
  "displayName": "k816 Language Support",
  "description": "VS Code extension wiring the k816 Language Server Protocol implementation.",
  "version": "0.0.3",
  "publisher": "X65-Project",
  "license": "0BSD",
  "repository": {
    "type": "git",
    "url": "https://github.com/X65/K816.git",
    "directory": "editors/vscode-k816"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers"
  ],
  "activationEvents": [
    "onDebugResolve:k816"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "breakpoints": [
      {
        "language": "k65"
      }
    ],
    "debuggers": [
      {
        "type": "k816",
        "label": "K816 Debugger",
        "languages": [
          "k65"
        ],
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to the .k65 file to debug."
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Pause execution on the first instruction.",
                "default": false
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "k816",
            "request": "launch",
            "name": "Debug K65 Program",
            "program": "${workspaceFolder}/target/output.xex"
          }
        ],
        "configurationSnippets": [
          {
            "label": "K816: Launch",
            "description": "Launch and debug a K65 program.",
            "body": {
              "type": "k816",
              "request": "launch",
              "name": "Debug K65 Program",
              "program": "^\"\\${workspaceFolder}/target/output.xex\""
            }
          }
        ]
      }
    ],
    "languages": [
      {
        "id": "k65",
        "extensions": [
          ".k65"
        ],
        "aliases": [
          "K65",
          "k65"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "k65",
        "scopeName": "source.k65",
        "path": "./syntaxes/k65.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "k816.restartServer",
        "title": "K816: Restart Language Server"
      },
      {
        "command": "k816.build",
        "title": "K816: Build"
      }
    ],
    "taskDefinitions": [
      {
        "type": "k816",
        "required": [
          "task"
        ],
        "properties": {
          "task": {
            "type": "string",
            "description": "The k816 command to run (build, clean, run, compile, link, fmt).",
            "default": "build"
          }
        }
      }
    ],
    "keybindings": [
      {
        "command": "k816.build",
        "key": "f7"
      }
    ],
    "configuration": {
      "title": "k816",
      "properties": {
        "k816.server.path": {
          "type": "string",
          "default": "k816",
          "description": "Path to the k816 executable used to start the language server."
        },
        "k816.server.args": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "lsp"
          ],
          "description": "Arguments passed to the k816 executable when starting the language server."
        },
        "k816.server.env": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "default": {},
          "description": "Extra environment variables merged into the language server process environment."
        },
        "k816.debugger.path": {
          "type": "string",
          "default": "emu",
          "description": "Path to the emulator executable used as the debug adapter."
        },
        "k816.debugger.args": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "--dap"
          ],
          "description": "Arguments passed to the emulator executable when starting the debug adapter."
        },
        "k816.debugger.env": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "default": {},
          "description": "Extra environment variables merged into the debug adapter process environment."
        },
        "k816.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Trace level forwarded to the language server client."
        },
        "k816.trace.debugger": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Trace DAP messages between VS Code and the debug adapter."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.19.11",
    "@types/vscode": "^1.96.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.7.3"
  }
}
